<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PadillaGTallerLayaout.Views.GridLayaout"
             Title="GridLayaout">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />            
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView Color="Green" />
        <Label Text="Pagina 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Column="1"
                 Color="Blue" />
        <Label Grid.Column="1"
               Text="Pagina 2"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Row="1"
                 Color="Teal" />
        <Label Grid.Row="1"
               Text="Pagina 3"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="Purple" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Text="Ir a StackLayout"
                TextColor="Black"
                BackgroundColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="Button_Clicked" />
    </Grid>
</ContentPage>